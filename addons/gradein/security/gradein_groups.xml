<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groups from users service for security gradein area -->
    <record id="service_module_category" model="ir.module.category">
        <field name="name">Service groups</field>
        <field name="description">Service groups </field>
        <field name="sequence">1</field>
    </record>

    <record id="group_seller_service" model="res.groups">
        <field name="name">Sellers</field>
        <field name="category_id" ref="service_module_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_admin_service" model="res.groups">
        <field name="name">Asistants</field>
        <field name="category_id" ref="library_module_category"/>
        <field name="implied_ids" eval="[(4, ref('group_seller_service'))]"/>
    </record>
</odoo>

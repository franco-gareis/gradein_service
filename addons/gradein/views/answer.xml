<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View Tree -->
    <record id="answer_view_tree" model="ir.ui.view">
        <field name="name">answer.view.tree</field>
        <field name="model">gradein.answer</field>
        <field name="arch" type="xml">
            <tree string="Respuestas posibles">
                <field name="name" />
                <field name="price_reduction" />
                <field name="blocking" />
            </tree>
        </field>
    </record>

    <!-- Menu Answer-->
    <record id='action_answer_model' model='ir.actions.act_window'>
        <field name='name'>Respuestas</field>
        <field name='res_model'>gradein.answer</field>
        <field name='view_mode'>tree,form</field>
    </record>

    <menuitem
        id="answer_menu"
        name="Respuestas"
        parent="configuration_menu"
    />

</odoo>
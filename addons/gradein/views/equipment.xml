<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View Form -->
    <record id="gradient_equipment_view_form" model="ir.ui.view">
        <field name="name">gradient.equipment.view.form</field>
        <field name="model">gradient.equipment</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="image" />
                        <field name="active" />
                        <field name="price" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View Tree -->
    <record id="gradient_equipment_view_tree" model="ir.ui.view">
        <field name="name">gradient.equipment.view.tree</field>
        <field name="model">gradient.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipos">
                <field name="name" />
                <field name="description" />
                <field name="_currency" invisible="1" />
                <field name="price" widget="monetary" option="{'currency_field': '_currency'}"/>
            </tree>
        </field>
    </record>

    <!-- Search -->
    <record id="gradient_equipment_view_search" model="ir.ui.view">
        <field name="name">gradient_equipment.view.search</field>
        <field name="model">gradient.equipment</field>
        <field name="arch" type="xml">
            <search string="Busqueda de equipos">
                <field name="name" />
                <field name="description" />
            </search>

            <!-- Filters -->
            <filter name="active" string="Archivados" domain="[('active', '=', False)]" />
        </field>
    </record>

    <!-- Menu Action -->
    <record id="action_equipment_model" model="ir.actions.act_window">
        <field name="name">Equipos</field>
        <field name="res_model">gradein.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="equipment_type_menu"
        name="Tipos de Equipos"
        action="action_equipment_type_model"
        parent='services_menu'
    />

</odoo>

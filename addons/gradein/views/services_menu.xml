<?xml version="1.0" encoding="utf-8"?>
<odoo>
      
    <!--####explicit list view definition ####-->

    <record model="ir.ui.view" id="gradein_questions_list">
      <field name="name">questions list</field>
      <field name="model">gradein.question</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="equipment_type_ids"/>
        </tree>
      </field>
    </record>
   
   <!--######### Forms views ###################-->

    <record model="ir.ui.view" id="gradein_question_form">
      <field name="name">question form</field>
      <field name="model">gradein.question</field>
      <field name="arch" type="xml">
      <form>
          <group>
          <field name="name"/>
          <field name="active"/>
          <field name="equipment_type_ids"/>
          <field name="answer_ids"/>
          </group>
        </form>
      </field>
    </record> 
        
    <!--##### Top menu item ###################-->
   
   <menuitem
        id="services_menu"
        name="Servicios"
        web_icon="gradein,static/description/icon.png"
    />

        <!-- submenu Configuracion -->
    <menuitem name="Configuracion" id="configuracion_menu" parent="service_menu"/>
    <menuitem name="Preguntas" id="preguntas_menu_item" parent="configuracion_menu" action="preguntas_action_window"/>

        <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="preguntas_action_window">
      <field name="name">preguntas window</field>
      <field name="res_model">gradein.question</field>
      <field name="view_mode">tree,form</field>
    </record>


</odoo>
